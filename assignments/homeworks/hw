# โปรแกรม ATM แบบง่าย
def atm():
    balance = 0  # เริ่มต้นมียอดเงิน 0
    while True:
        print("\n===== ATM MENU =====")
        print("1. ฝากเงิน")
        print("2. ถอนเงิน")
        print("3. เช็คยอดเงิน")
        print("4. ออก")

        choice = input("เลือกเมนู: ")

        if choice == "1":
            amt = float(input("จำนวนเงินฝาก: "))
            balance += amt
            print("ฝากสำเร็จ! ยอดเงิน =", balance)
        elif choice == "2":
            amt = float(input("จำนวนเงินถอน: "))
            if amt > balance:
                print("ยอดเงินไม่พอ!")
            else:
                balance -= amt
                print("ถอนสำเร็จ! ยอดเงิน =", balance)
        elif choice == "3":
            print("ยอดเงินปัจจุบัน =", balance)
        elif choice == "4":
            print("ออกจากระบบ")
            break
        else:
            print("กรุณาเลือกเมนูใหม่")

atm()


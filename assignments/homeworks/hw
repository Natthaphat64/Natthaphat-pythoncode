# สมุดโทรศัพท์แบบง่าย
def contact_book():
    contacts = {}

    while True:
        print("\n=== Contact Book ===")
        print("1. เพิ่มเบอร์")
        print("2. ค้นหา")
        print("3. แสดงทั้งหมด")
        print("4. ออก")
        ch = input("เลือกเมนู: ")

        if ch == "1":
            name = input("ชื่อ: ")
            phone = input("เบอร์: ")
            contacts[name] = phone
        elif ch == "2":
            name = input("ค้นหาชื่อ: ")
            if name in contacts:
                print(name, ":", contacts[name])
            else:
                print("ไม่พบ")
        elif ch == "3":
            for k,v in contacts.items():
                print(k, ":", v)
        elif ch == "4":
            break
        else:
            print("เลือกเมนูใหม่")

contact_book()


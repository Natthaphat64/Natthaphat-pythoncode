#เป่ายิ้งฉุบ
import random
choices = ["ค้อน","กรรไกร","กระดาษ"]
user = input("เลือก: ")
comp = random.choice(choices)
print("คอมพิวเตอร์เลือก:", comp)
if user == comp:
    print("เสมอ")
elif (user=="ค้อน" and comp=="กรรไกร") or \
     (user=="กรรไกร" and comp=="กระดาษ") or \
     (user=="กระดาษ" and comp=="ค้อน"):
    print("คุณชนะ")
else:
    print("คุณแพ้")


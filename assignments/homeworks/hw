#เกมทายเลข
import random
num = random.randint(1,10)
while True:
    guess = int(input("ทายเลข: "))
    if guess == num:
        print("ถูกต้อง!")
        break
    elif guess < num:
        print("น้อยไป")
    else:
        print("มากไป")


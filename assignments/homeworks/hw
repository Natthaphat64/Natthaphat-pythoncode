# โปรแกรมจัดการรายชื่อนักเรียน
def student_manager():
    students = []  # ลิสต์เก็บชื่อ

    while True:
        print("\n===== Student Menu =====")
        print("1. เพิ่มชื่อ")
        print("2. แสดงทั้งหมด")
        print("3. ค้นหาชื่อ")
        print("4. ออก")

        ch = input("เลือกเมนู: ")

        if ch == "1":
            name = input("ป้อนชื่อ: ")
            students.append(name)
            print("เพิ่มสำเร็จ")
        elif ch == "2":
            print("รายชื่อนักเรียน:", students)
        elif ch == "3":
            name = input("ค้นหาชื่อ: ")
            if name in students:
                print(name, "พบในระบบ")
            else:
                print(name, "ไม่พบในระบบ")
        elif ch == "4":
            break
        else:
            print("กรุณาเลือกใหม่")

student_manager()

----------

# โปรแกรมอ่านไฟล์คะแนนและหาค่าเฉลี่ย
def avg_score():
    total = 0
    count = 0
    with open("score.txt", "r", encoding="utf-8") as f:
        for line in f:
            score = int(line.strip())
            total += score
            count += 1

    print("คะแนนทั้งหมด:", count, "ค่าเฉลี่ย =", total/count)

avg_score()


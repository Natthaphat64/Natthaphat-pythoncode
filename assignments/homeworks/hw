import random
# โปรแกรมทายเลข
secret = random.randint(1, 10)   # สุ่มเลข 1-10
while True:
    guess = int(input("ทายเลข (1-10): "))
    if guess == secret:
        print("ถูกต้อง! เลขคือ", secret)
        break
    elif guess < secret:
        print("น้อยไป")
    else:
        print("มากไป")


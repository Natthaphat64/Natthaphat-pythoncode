#ตรวจสอบจำนวนเฉพาะ
def is_prime(n):
    if n < 2:
        return False
    for i in range(2, n):
        if n % i == 0:
            return False
    return True

num = int(input("ตัวเลข: "))
print("เป็นจำนวนเฉพาะ?", is_prime(num))

-------------

#ยกกำลัง
def power(x, y):
    return x**y
print("2^3 =", power(2,3))

